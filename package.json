{
	"name": "desafio-biblico-api",
	"scripts": {
		"lint": "biome check",
		"format": "biome format --write",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./e2e/jest-e2e.json",
		"dev": "nest start --watch",
		"build": "nest build",
		"start": "node dist/main"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node",
		"moduleNameMapper": {
			"^@/(.*)$": "<rootDir>/$1",
			"^@prisma/generated/(.*)$": "<rootDir>/../prisma/generated/$1"
		},
		"transformIgnorePatterns": [
			"node_modules/(?!(@prisma)/)"
		]
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.974.0",
		"@aws-sdk/s3-request-presigner": "^3.974.0",
		"@nestjs/axios": "^4.0.1",
		"@nestjs/common": "^11.0.1",
		"@nestjs/config": "^4.0.2",
		"@nestjs/core": "^11.0.1",
		"@nestjs/jwt": "^11.0.2",
		"@nestjs/platform-express": "^11.0.1",
		"@nestjs/swagger": "^11.2.4",
		"@onesignal/node-onesignal": "^5.3.1-beta1",
		"@prisma/adapter-pg": "^7.2.0",
		"@prisma/client": "^7.2.0",
		"axios": "^1.13.2",
		"class-validator": "^0.14.3",
		"cookie-parser": "^1.4.7",
		"nestjs-resend": "^1.1.0",
		"pg": "^8.16.3",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@nestjs/cli": "^11.0.0",
		"@nestjs/schematics": "^11.0.0",
		"@nestjs/testing": "^11.0.1",
		"@types/cookie-parser": "^1.4.10",
		"@types/express": "^5.0.0",
		"@types/jest": "^30.0.0",
		"@types/node": "^22.10.7",
		"@types/pg": "^8.16.0",
		"@types/supertest": "^6.0.2",
		"globals": "^16.0.0",
		"jest": "^30.0.0",
		"prisma": "^7.2.0",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.5",
		"ts-loader": "^9.5.2",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.7.3"
	}
}
